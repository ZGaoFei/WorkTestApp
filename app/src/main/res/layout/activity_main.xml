<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zgf.test.worktestapp.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srb_starSize="20dp"
                app:srb_numberOfStars="5"
                app:srb_rating="3"
                app:srb_stepSize="1" />

            <com.zgf.test.worktestapp.ScrollEditText
                android:id="@+id/edit_text_one"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:scrollbars="vertical"
                android:hint="one"
                android:background="@null"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="text view one"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:text="text view two"/>

            <com.zgf.test.worktestapp.ScrollEditText
                android:id="@+id/edit_text_two"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:scrollbars="vertical"
                android:hint="two"
                android:background="@null"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:text="text view two"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:text="text view two"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="text view two"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:text="text view two"/>

            <com.zgf.test.worktestapp.ScrollEditText
                android:id="@+id/edit_text_three"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:scrollbars="vertical"
                android:hint="three"
                android:background="@null"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:text="text view two"/>

            <com.zgf.test.worktestapp.ScrollEditText
                android:id="@+id/edit_text_four"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:scrollbars="vertical"
                android:hint="four"
                android:background="@null"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
